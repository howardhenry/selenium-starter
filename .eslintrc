{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "describe": true,
    "expect": true,
    "jest": true,
    "it": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": ["error", "always"],
    "class-methods-use-this": 0,
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-len": ["error", 100],
    "no-case-declarations": 0,
    "no-param-reassign": 0,
    "no-useless-escape": 0
  }
}
